<div class="mt-2 px-1">
    <div class="flex flex-wrap -mx-3 relative">
        {% for product in craft.entries.all() %}
            <a href="{{ product.url }}" class="flex flex-column w-full sm:w-1/2 md:w-1/3 p-2 no-underline hover:no-underline">
                <div class="card rounded w-full p-6 flex bg-white shadow hover:shadow-lg">
                    <div class="inner">
                        <span class="text-black leading-tight">
                            {{- product.title -}}
                        </span>
                        {% if product.productDetails %}
                            <span class="block mt-2 text-sm opacity-50">
                                {{- product.productDetails.price | currency -}}
                            </span>
                        {% endif %}
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
